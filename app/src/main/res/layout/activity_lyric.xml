<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/play_page_default_bg"
    tools:context="com.example.dell.bonimusic.view.activity.LyricActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgback"
        android:src="@mipmap/ic_arrow_down"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvname"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="无音乐"
        android:layout_alignTop="@+id/imgback"
        android:layout_toRightOf="@+id/imgback"
        android:layout_toEndOf="@+id/imgback" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvsingger"
        android:text="无歌手"
        android:textSize="15sp"
        android:textColor="#DFD9CE"
        android:layout_below="@+id/tvname"
        android:layout_toRightOf="@+id/imgback"
        android:layout_toEndOf="@+id/imgback" />
</RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">
        <SeekBar
            android:layout_gravity="center"
            android:layout_height="wrap_content" android:layout_width="200dp"
            android:id="@+id/skbProgress" android:max="100"></SeekBar>
        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/imgxunhuanbofang"
        android:src="@mipmap/ic_play_btn_loop_pressed"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal">
       <ImageView
           android:layout_width="50dp"
           android:layout_height="wrap_content"
           android:id="@+id/imgzuo"
           android:src="@mipmap/ic_play_btn_prev"/>
        <CheckBox
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/imgzj"
            android:button="@null"
            android:checked="false"
            android:background="@drawable/bgxzq1"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/imgyou"
            android:src="@mipmap/ic_play_btn_next"/>
    </LinearLayout>
</LinearLayout>
    </LinearLayout>
</LinearLayout>
